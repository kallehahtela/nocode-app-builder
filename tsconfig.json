{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ES2023",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@backend/*": ["backend"]
    }
  },
  "include": ["app/**/*", "backend/**/*"]
}
